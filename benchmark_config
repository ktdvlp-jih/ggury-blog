            name: title
            label: Site Title
            default: 'Gatsby Starter Flat Blog'
            required: true
          - widget: object
            name: author
            label: Author
            fields:
              - widget: string
                name: name
                label: Name
                default: 'Your Name'
                required: true
              - widget: string
                name: summary
                label: Summary
                default: 'Your Summary'
                required: true
          - widget: string
            name: description
            label: Description
            default: 'Your Description'
            required: false
          - widget: string
            name: siteUrl
            label: Website URL
            required: true
          - widget: object
            name: social
            label: Social
            fields:
              - widget: string
                name: github
                label: Github
                required: false
              - widget: string
                name: instagram
                label: Instagram
                required: false
              - widget: string
                name: twitter
                label: Twitter
                required: false
              - widget: string
                name: facebook
                label: Facebook
                required: false
  - name: blog
    label: Blog
    folder: content/posts
    create: true
    slug: '{{category}}/{{slug}}/index'
    fields:
      - {
          label: 'Template Key',
